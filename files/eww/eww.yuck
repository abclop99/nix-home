(include "./bar.yuck")

; Window for the bar
(defwindow bar
	:monitor 0
	:geometry (geometry
		:x "0%"
		:y "9px"
		:width "98%"
		:height "30px"
		:anchor "top center"
	)
	:stacking "fg"
	:reserve (struts :distance "40px" :side "top")
	:windowtype "dock"
	:wm-ignore false
	:exclusive true
	:focusable false

	(bar)
)
